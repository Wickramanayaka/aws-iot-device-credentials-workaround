{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "iot:Connect",
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": "iot:Publish",
      "Resource": ["arn:aws:iot:*:*:topic/$aws/certificates/create/*"]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Receive",
      "Resource": ["arn:aws:iot:*:*:topic/$aws/certificates/create/*"]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Subscribe",
      "Resource": ["arn:aws:iot:*:*:topicfilter/$aws/certificates/create/*"]
    }
  ]
}
